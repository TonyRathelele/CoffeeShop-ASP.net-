@model IEnumerable<Product>
@{
    ViewData["Title"] = "Shop - Coffee Haven";
    var categoryName = ViewBag.CategoryName as string;
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                @if (!string.IsNullOrEmpty(categoryName))
                {
                    @categoryName
                }
                else if (!string.IsNullOrEmpty(searchTerm))
                {
                    <text>Search Results for "@searchTerm"</text>
                }
                else
                {
                    <text>All Products</text>
                }
            </h1>
        </div>
        <div class="col-md-4">
            <form method="get" class="d-flex">
                <input type="search" name="search" class="form-control me-2" placeholder="Search products..." value="@searchTerm">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-action="Index" class="text-decoration-none @(string.IsNullOrEmpty(categoryName) && string.IsNullOrEmpty(searchTerm) ? "fw-bold" : "")">
                                All Products
                            </a>
                        </li>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in (List<Category>)ViewBag.Categories)
                            {
                                <li class="mb-2">
                                    <a asp-action="Index" asp-route-categoryId="@category.Id" 
                                       class="text-decoration-none @(categoryName == category.Name ? "fw-bold text-primary" : "")">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-md-9">
            @if (Model != null && Model.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm product-card">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;" />
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-muted small">@product.Category.Name</p>
                                    <p class="card-text flex-grow-1">@product.Description</p>
                                    
                                    @if (!string.IsNullOrEmpty(product.FlavorNotes))
                                    {
                                        <p class="card-text small text-muted">
                                            <i class="fas fa-leaf me-1"></i>@product.FlavorNotes
                                        </p>
                                    }
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h5 text-primary mb-0">@product.Price.ToString("C")</span>
                                        <div class="text-end">
                                            <small class="text-muted d-block">@product.Origin</small>
                                            <small class="text-muted">@product.RoastLevel Roast</small>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary flex-grow-1">
                                            View Details
                                        </a>
                                        <form asp-action="AddToCart" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <button type="submit" class="btn btn-primary" @(!product.IsAvailable || product.StockQuantity <= 0 ? "disabled" : "")>
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        </form>
                                    </div>
                                    
                                    @if (!product.IsAvailable || product.StockQuantity <= 0)
                                    {
                                        <small class="text-danger mt-2">Out of Stock</small>
                                    }
                                    else if (product.StockQuantity < 10)
                                    {
                                        <small class="text-warning mt-2">Only @product.StockQuantity left!</small>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h3>No products found</h3>
                    <p class="text-muted">Try adjusting your search or browse our categories.</p>
                    <a asp-action="Index" class="btn btn-primary">View All Products</a>
                </div>
            }
        </div>
    </div>
</div> 